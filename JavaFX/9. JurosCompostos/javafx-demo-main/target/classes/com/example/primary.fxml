<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <TextField fx:id="txtValorInicial" promptText="Valor inicial" />
      <TextField fx:id="txtTaxaJuros" promptText="Taxa de juros" />
      <TextField fx:id="txtTempo" promptText="Tempo (meses)" />
      <Button mnemonicParsing="false" onAction="#calcular" text="Calcular" />
      <Label fx:id="lblResultado" text="Resultado" />
   </children>
</VBox>
